{
  "$schema": "http://json.schemastore.org/template",
  "author": "Blazor Tailwind Template",
  "classifications": [ "Web", "Blazor", "Tailwind", "Clean Architecture", ".NET" ],
  "identity": "Blazor.Tailwind.Template",
  "name": "Blazor Tailwind Solution",
  "shortName": "blazortailwind",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "Blazor.Tailwind.Template",
  "preferNameDirectory": true,
  "symbols": {
    "TargetFramework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9"
        }
      ],
      "defaultValue": "net9.0",
      "replaces": "net9.0"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            ".template.config/**/*",
            "**/*.filelist",
            "**/*.user",
            "**/*.lock.json"
          ]
        }
      ]
    }
  ]
}